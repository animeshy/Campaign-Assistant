<WelcomeScreen>:
    id: welcome_screen

    BoxLayout:
        canvas:
            Rectangle:
                source: 'logo.jpg'
                size: self.size
                pos: self.pos

        BoxLayout:
            Button:
                text: "Click here to Proceed"
                size_hint: 0.2 ,0.1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0.1
                    root.manager.current = 'screen_one'



<ScreenOne>:
    id: screen_one
    display: entry
    display2: entry2

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1 ,0.2
            Button:
                text: "Sentiment Test"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 0
                    root.manager.current = 'screen_one'

            Button:
                text: "Graph"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0
                    root.manager.current = 'screen_two'

            Button:
                text: "Summary"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0
                    root.manager.current = 'screen_three'
            Button:
                text: "Frequency Chart"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0
                    root.manager.current = 'frequency_screen'
            Button:
                text: "FAQs"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0
                    root.manager.current = 'screen_four'

            Button:
                text: "Support"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 0
                    root.manager.current = 'screen_five'


        BoxLayout:
            padding: 10
            Label:
                text: "Input"
                size_hint: .2, .7
            TextInput:
                id: entry
                font_size: 32
                multiline: False

        BoxLayout:
            padding: 10
            Label:
                text: "Output"
                size_hint: .2, .7
            TextInput:
                id: entry2
                font_size: 32
                multiline: False


        Button:
            size_hint: 1 ,0.2
            text: "Predict"
            on_press: screen_one.predict(entry.text)


